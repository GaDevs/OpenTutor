# Core
NODE_ENV=development
LOG_LEVEL=info
TZ=UTC

# WhatsApp app
WHATSAPP_SESSION_DIR=./sessions
ALLOW_GROUPS=false
SEND_TEXT_WITH_VOICE=true
MAX_RESPONSE_CHARS=800
TEMP_DIR=./tmp

# Tutor defaults
DEFAULT_TARGET_LANGUAGE=en
DEFAULT_MODE=lesson
DEFAULT_CORRECTIONS=light
SUMMARY_EVERY_N_MESSAGES=8
MAX_HISTORY_MESSAGES=12

# Ollama
OLLAMA_BASE_URL=http://127.0.0.1:11434
MODEL=llama3.1
OLLAMA_TIMEOUT_MS=60000

# STT service (FastAPI)
STT_BASE_URL=http://127.0.0.1:8001
STT_TIMEOUT_MS=120000

# Piper + ffmpeg
PIPER_BIN=piper
PIPER_MODEL=./services/tts/voices/en_US-lessac-medium.onnx
PIPER_CONFIG=./services/tts/voices/en_US-lessac-medium.onnx.json
# Optional: if unset, OpenTutor auto-detects ./tools/ffmpeg/ffmpeg(.exe) before PATH
FFMPEG_BIN=ffmpeg
TTS_SAMPLE_RATE=22050

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_MESSAGES=20
MIN_SECONDS_BETWEEN_REPLIES=1
